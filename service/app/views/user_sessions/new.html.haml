%h1 Login

= form_for @user_session, :url => {:action => "create"} do |f|
  = f.error_messages
  %table
    %tr
      %td= f.label :login
      %td= f.text_field :login
    %tr
      %td= f.label :password
      %td= f.password_field :password
    %tr
      %td= f.check_box :remember_me
      %td= f.label :remember_me
    %tr
      %td{ :colspan => 2 }= f.submit "Login"
